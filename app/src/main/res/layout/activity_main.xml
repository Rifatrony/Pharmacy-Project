<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    android:background="@drawable/bg2"
    tools:context=".LoginActivity">

    <ImageView
        android:layout_gravity="center"
        android:layout_width="420dp"
        android:layout_height="260dp"
        android:src="@drawable/logintop"

        />





    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">


        <TextView
            android:inputType="text"
            android:layout_marginTop="12dp"

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Login"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textColor="@color/white"
            />
        <View
            android:layout_marginTop="5dp"
            android:layout_width="70dp"
            android:layout_height="2dp"
            android:layout_marginBottom="12dp"
            android:background="@color/white"
            />

        <EditText

            android:backgroundTint="@color/white"
            android:textCursorDrawable="@color/black"
            android:layout_width="330dp"
            android:layout_height="match_parent"
            android:id="@+id/signInEmailEditTextId"
            android:hint="@string/signUpEmail"
            android:drawablePadding="10dp"
            android:drawableStart="@drawable/email_icon"
            android:background="@drawable/loginbackground"
            android:padding="12dp"
            android:textSize="20sp"
            android:cursorVisible="true"
            android:inputType="text"

            />

        <EditText
            android:id="@+id/signInPasswordEditTextId"
            android:layout_width="330dp"
            android:layout_height="match_parent"
            android:layout_marginTop="15dp"
            android:padding="12dp"
            android:background="@drawable/loginbackground"
            android:backgroundTint="@color/white"
            android:textSize="18sp"
            android:hint="@string/pass"
            android:inputType="textPassword"
            android:cursorVisible="true"
            android:textCursorDrawable="@color/black"
            android:drawablePadding="10dp"
            android:drawableStart="@drawable/lock_icon"
            android:layout_marginBottom="20dp"

            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center"


            >

            <Button
                android:id="@+id/signInButtonId"
                android:layout_width="150dp"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:layout_height="60dp"
                android:text="@string/signinbtn"
                android:textAllCaps="false"
                android:textSize="18sp"
                android:background="@drawable/loginbackground"
                android:backgroundTint="@color/black"
                android:layout_marginRight="10dp"

                />





        </LinearLayout>
        <TextView
            android:id="@+id/signUpTextViewId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No account yet? Sign Up. "
            android:textColor="@color/white"
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            />


        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:id="@+id/progressBarId"
            android:layout_gravity="center"
            android:outlineSpotShadowColor="@color/white"
            />



    </LinearLayout>


</LinearLayout>