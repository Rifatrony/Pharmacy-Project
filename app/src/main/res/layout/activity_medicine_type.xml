<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:padding="20dp"

    tools:context=".MedicineType">

    <EditText
        android:id="@+id/medicineTypeEditTextId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:backgroundTint="@color/black"
        android:hint="Medicine Type (e.g. Pain Killer..)"
        android:textSize="18sp"
        />

    <Button
        android:id="@+id/medicineTypeSaveButtonId"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="10dp"
        android:text="Save Medicine Type"
        android:textAllCaps="false"
        android:textSize="20sp"

        android:textColor="@color/white"
        android:backgroundTint="#369511"
        />



</LinearLayout>