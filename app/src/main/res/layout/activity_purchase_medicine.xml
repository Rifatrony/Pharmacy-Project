<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="#E9EDF1"
    tools:context=".PurchaseMedicine">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal">

            <TextView

                android:layout_width="155dp"
                android:layout_height="40dp"
                android:text="@string/manufacture"
                android:textSize="20sp"
                />
            <com.toptoche.searchablespinnerlibrary.SearchableSpinner
                android:id="@+id/spinnerManufactureId"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textAlignment="textEnd"
                android:layout_marginLeft="40dp"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal">

            <TextView

                android:layout_width="155dp"
                android:layout_height="40dp"
                android:text="@string/medicine_name"
                android:textSize="20sp"
                />

            <com.toptoche.searchablespinnerlibrary.SearchableSpinner
                android:id="@+id/spinnerMedicineNameId"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="40dp"
                android:dropDownWidth="wrap_content"
                android:textAlignment="textEnd" />

        </LinearLayout>


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/buyDateId"
            android:hint="@string/select_buy_date"
            android:textSize="20sp"
            android:layout_marginBottom="20dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal">

            <TextView

                android:layout_width="155dp"
                android:layout_height="40dp"
                android:text="Payment Type"
                android:textSize="20sp"
                />
            <com.toptoche.searchablespinnerlibrary.SearchableSpinner
                android:id="@+id/spinnerPaymentTypeId"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textAlignment="textEnd"
                android:layout_marginLeft="40dp"
                />

        </LinearLayout>

        <EditText
            android:id="@+id/batchId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/batch_id"
            android:inputType="number"
            android:layout_marginBottom="20dp"
            android:backgroundTint="@color/black"
            />

        <EditText
            android:id="@+id/expierDateId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/select_expire_date"
            android:layout_marginBottom="20dp"
            android:backgroundTint="@color/black"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal">

            <TextView
                android:layout_gravity="center_vertical"
                android:layout_width="155dp"
                android:layout_height="wrap_content"
                android:text="@string/quantity"
                android:textSize="20sp"
                />
            <TextView
                android:id="@+id/storeQuantityId"
                android:layout_gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:textSize="20sp"
                />

        </LinearLayout>

        <EditText
            android:id="@+id/quantityId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/quantity"
            android:inputType="numberDecimal"
            android:layout_marginBottom="20dp"
            android:backgroundTint="@color/black"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal">

            <TextView
                android:layout_gravity="center_vertical"
                android:layout_width="175dp"
                android:layout_height="wrap_content"
                android:text="@string/manufacture_price"
                android:textSize="20sp"
                />
            <EditText
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:id="@+id/manufacturePriceId"
                android:textSize="18sp"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal">

            <TextView
                android:layout_gravity="center_vertical"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:text="Total Price"
                android:textSize="20sp"
                />
            <TextView
                android:textAlignment="center"
                android:layout_width="155dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:id="@+id/totalPriceId"
                android:layout_marginTop="5dp"
                android:textSize="20sp"
                />

        </LinearLayout>

        <Button
            android:id="@+id/saveButtonId"
            android:layout_width="200dp"
            android:layout_height="70dp"
            android:text="@string/save"
            android:textSize="25sp"
            android:textAllCaps="false"
            android:backgroundTint="#147FD3"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"

            />

    </LinearLayout>

</ScrollView>